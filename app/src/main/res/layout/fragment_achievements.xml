<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.myprofile.Achievements">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="688dp"
            android:background="@drawable/add_task_round"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/trophies"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="189dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="709dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Complete a week of no missing tasks" />

        <View
            android:id="@+id/view7"
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="199dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="500dp"
            android:background="@drawable/add_task_round"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/leftTillNextLevel"
            android:layout_width="171dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="215dp"
            android:layout_marginBottom="515dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="10 more tasks until the next level" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="111dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="264dp"
            android:layout_marginBottom="713dp"
            android:elevation="2dp"
            android:src="@drawable/best" />

        <TextView
            android:id="@+id/badges"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="189dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="769dp"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="7 Days Of Completed Tasks"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>