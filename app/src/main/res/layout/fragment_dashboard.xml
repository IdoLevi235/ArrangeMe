<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4F4F4"
    tools:context=".ui.dashboard.DashboardFragment">

    <View
        android:id="@+id/viewUpBtn"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:background="@drawable/dash_back23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <RelativeLayout
        android:id="@+id/noScheduleLayout"
        android:layout_width="308dp"
        android:layout_height="230dp"
        android:background="@drawable/rounded_rec_pink"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toBottomOf="@+id/textViewPleaseChooseAdd"
        app:layout_constraintVertical_bias="0.51">

        <TextView
            android:id="@+id/noScheduleYet"
            android:layout_width="266dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="141dp"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/quesMessage"
            android:layout_width="261dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="70dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/questionnaireBtn"
            android:layout_width="240dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/btn_rounded"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat"
            android:text="Fill The Questionnaire"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />

    </RelativeLayout>


    <Button
        android:id="@+id/chooseTasksBtn"
        android:layout_width="130dp"
        android:layout_height="64dp"
        android:background="@drawable/dashboard_topbuttons"
        android:drawableRight="@drawable/scfhedule_2"
        android:drawablePadding="-8dp"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat"
        android:paddingRight="6dp"
        android:text="Build A Schedule"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewUpBtn"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/rankit"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:background="#00FFFFFF"
        android:drawableRight="@drawable/rankit"
        android:elevation="1.5dp"
        android:fontFamily="@font/montserrat"
        android:paddingRight="6dp"
        android:text="Rank the Schedule"
        android:textAllCaps="false"
        android:textColor="#F1C011"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toBottomOf="@+id/recyclerDash"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ScheduleForToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Today"
        android:textColor="#da5955"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewUpBtn"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/Hello"
        android:layout_width="299dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"
        android:text="Your suggested schedule for today:"
        android:textColor="#4E4E4E"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScheduleForToday"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view11"
        android:layout_width="379dp"
        android:layout_height="327dp"
        android:background="@drawable/rounded_rec_pink"
        android:elevation="1.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hello"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/Taskcompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="9dp"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:visibility="gone"
        android:text="Completed Tasks"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/view9"
        app:layout_constraintEnd_toEndOf="@+id/view9"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9"
        app:layout_constraintVertical_bias="0.83" />

    <TextView
        android:id="@+id/TaskcompletedNum"
        android:elevation="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="200"
        android:visibility="gone"
        android:textColor="@color/work"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/view9"
        app:layout_constraintEnd_toEndOf="@+id/view9"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9"
        app:layout_constraintVertical_bias="0.13" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDash"
        android:layout_width="351dp"
        android:layout_height="255dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toTopOf="@+id/view11"
        app:layout_constraintVertical_bias="0.3" />

    <RelativeLayout
        android:id="@+id/relativeLayout12"
        android:layout_width="394dp"
        android:layout_height="165dp"
        android:layout_marginBottom="532dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewUpBtn"
        app:layout_constraintVertical_bias="0.47">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="175dp"
            android:layout_height="142dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="219dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="9dp"
            android:elevation="3.1dp"
            android:src="@drawable/try2" />

        <RelativeLayout
            android:layout_width="388dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_dashboard"
            android:elevation="3dp">

            <TextView
                android:id="@+id/textDetails"
                android:layout_width="235dp"
                android:layout_height="57dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="134dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/montserrat"
                android:gravity="left"
                android:text="You have 3 tasks to finish and already complete 80% of you schedule today. Keep it up!"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/welcomText"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="162dp"
                android:layout_marginBottom="78dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="left"
                android:text="Hello Ido !"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>