<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4F4F4"
    tools:context=".menu.dashboard.DashboardFragment">

    <View
        android:id="@+id/viewUpBtn"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:background="@drawable/dash_back23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <RelativeLayout
        android:id="@+id/view11"
        android:layout_width="362dp"
        android:layout_height="271dp"
        android:elevation="1.5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hello"
        app:layout_constraintVertical_bias="0.01999998">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noScheduleLayout"
        android:layout_width="335dp"
        android:layout_height="222dp"
        android:background="@drawable/rounded_rec_pink"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewUpBtn"
        app:layout_constraintVertical_bias="0.48000002">

        <TextView
            android:id="@+id/noScheduleYet"
            android:layout_width="266dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="127dp"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/quesMessage"
            android:layout_width="261dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="56dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="18sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/questionnaireBtn"
            android:layout_width="240dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="174dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/btn_rounded_yellow"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat"
            android:text="Fill The Questionnaire"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout12"
        android:layout_width="415dp"
        android:layout_height="200dp"
        android:layout_marginBottom="532dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewUpBtn"
        app:layout_constraintVertical_bias="0.47">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="160dp"
            android:layout_height="155dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="235dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="11dp"
            android:elevation="3.1dp"
            android:src="@drawable/try2" />

        <RelativeLayout
            android:layout_width="379dp"
            android:layout_height="141dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/layout_dashboard"
            android:elevation="3dp">

            <TextView
                android:id="@+id/textDetails"
                android:layout_width="237dp"
                android:layout_height="53dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="149dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="@font/montserrat"
                android:gravity="left"
                android:text="You have 3 tasks to finish and already complete 80% of you schedule today. Keep it up!"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/welcomText"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="176dp"
                android:layout_marginBottom="109dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="left"
                android:text="Hello Ido !"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <Button
                android:id="@+id/chooseTasksBtn"
                android:layout_width="195dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="98dp"
                android:layout_marginEnd="175dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/dashboard_topbuttons"
                android:drawableRight="@drawable/scfhedule_2"
                android:drawablePadding="-8dp"
                android:elevation="2dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="6dp"
                android:text="Build A Schedule"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ScheduleForToday"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat"
        android:text="Today"
        android:textColor="#da5955"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewUpBtn" />

    <TextView
        android:id="@+id/Hello"
        android:layout_width="299dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"
        android:text="Your suggested schedule for today:"
        android:textColor="#4E4E4E"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScheduleForToday" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rankit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/avatar_empty"
        android:clickable="true"
        android:elevation="11dp"
        android:padding="8dp"
        android:src="@drawable/star_ranking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewUpBtn" />

    <TextView
        android:id="@+id/rateMsg"
        android:layout_width="365dp"
        android:layout_height="34dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:textColor="#F4BB06"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerDash"
        app:layout_constraintVertical_bias="0.07999998" />

    <ProgressBar
        android:id="@+id/progressBar6"
        style="?android:attr/progressBarStyle"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:elevation="99dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDash"
        android:layout_width="369dp"
        android:layout_height="301dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_rec_pink"
        android:elevation="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hello"
        app:layout_constraintVertical_bias="0.032" />

</androidx.constraintlayout.widget.ConstraintLayout>