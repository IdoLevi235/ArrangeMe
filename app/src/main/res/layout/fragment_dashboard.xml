        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toTopOf="@+id/view11"
        app:layout_constraintVertical_bias="0.71000004">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/unchecked2"
                android:elevation="2dp"
                android:padding="6dp"
                android:text="  Clean The Room"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/task2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/checked2"
                android:elevation="2dp"
                android:padding="6dp"
                android:text="  Do Dishes"
                android:textSize="21sp" />

            <CheckBox
                android:id="@+id/task3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:elevation="2dp"
                android:padding="6dp"
                android:text="  Do Dishes"
                android:textSize="21sp" />

            <CheckBox
                android:id="@+id/task4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:elevation="2dp"
                android:padding="6dp"
                android:text="  Do Dishes"
                android:textSize="21sp" />


        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view9"
        android:layout_width="183dp"
        android:layout_height="78dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/rounded_rec_pink"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.380" />

