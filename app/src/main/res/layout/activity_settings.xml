<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4F4F4"
    tools:context=".ui.myprofile.Settings">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#75C1C9"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/settingHeadline"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Settings"
        android:textColor="@color/arrangeMeMain"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />


    <TextView
        android:id="@+id/notifications"
        android:layout_width="183dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Notifications"
        android:textColor="#787878"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingHeadline"
        app:layout_constraintVertical_bias="0.0" />


    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="361dp"
        android:layout_height="203dp"
        android:elevation="2dp"
        android:background="@drawable/add_task_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291">

        <Switch
            android:id="@+id/App"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="112dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text="App Reminders"
            android:textColor="#616161"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/Phone"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="155dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text="Phone Reminders"
            android:textColor="#616161"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/sounds"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="68dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text="Reminders Sound"
            android:textColor="#616161"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/build"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text="Build Your Schedule Reminder"
            android:textColor="#616161"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </RelativeLayout>

    <Switch
        android:id="@+id/google"
        android:layout_width="361dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/add_task_round"
        android:drawableStart="@drawable/google_xml"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat"
        android:padding="5dp"
        android:text="  Google Calendar Synchronization"
        android:textColor="#616161"
        android:textIsSelectable="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Social"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/logout"
        android:layout_width="357dp"
        android:layout_height="42dp"
        android:layout_marginTop="660dp"
        android:background="@drawable/rounded_rec_blueborder"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:text="Logout From Your Account"
        android:textAllCaps="false"
        android:textColor="@color/arrangeMeMain"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/monthName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="361dp"
        android:layout_height="114dp"
        android:background="@drawable/add_task_round"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Other"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/fillTheQuestion"
            android:layout_width="208dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_rounded"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat"
            android:text="Fill The Questionnaire"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <Switch
            android:id="@+id/reminder_switch"
            android:layout_width="342dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="61dp"
            android:drawablePadding="2dp"
            android:drawableTint="#616161"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text="Finished Questionnaire"
            android:textColor="#616161"
            android:textSize="15sp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/Other"
        android:layout_width="183dp"
        android:layout_height="28dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Other"
        android:textColor="#787878"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google"
        app:layout_constraintVertical_bias="0.04000002" />

    <TextView
        android:id="@+id/Social"
        android:layout_width="183dp"
        android:layout_height="28dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Social"
        android:textColor="#787878"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout9"
        app:layout_constraintVertical_bias="0.04000002" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="101dp"
        android:layout_height="59dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-light"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_40"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/toolbar_settings"
        app:layout_constraintTop_toTopOf="@+id/toolbar_settings"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/applyBtn"
        android:layout_width="101dp"
        android:layout_height="59dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="APPLY"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/toolbar_settings"
        app:layout_constraintTop_toTopOf="@+id/toolbar_settings"
        app:layout_constraintVertical_bias="0.023" />
</androidx.constraintlayout.widget.ConstraintLayout>